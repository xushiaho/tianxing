<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tianxing.system.mapper.SysApisMapper">


    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.tianxing.system.entity.SysApis">
            <result column="id"      property="id"     />
                <result column="modular_id"      property="modularId"    />
                <result column="apis_name"      property="apisName"    />
                <result column="head"      property="head"    />
                <result column="parameter"      property="parameter"    />
                <result column="revert"      property="revert"    />
                <result column="illustration"      property="illustration"    />
                <result column="address"      property="address"    />
                <result column="state"      property="state"    />
                <result column="create_by"      property="createBy"    />
                <result column="create_time"      property="createTime"    />
                <result column="update_by"      property="updateBy"    />
                <result column="update_time"      property="updateTime"    />
                <result column="remark"      property="remark"    />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="selectSysApisVo">
        select
        id,
        modular_id, apis_name, head, parameter, revert, illustration, address, state, create_by, create_time, update_by, update_time, remark from sys_apis
    </sql>

    <select id="selectSysApisList" parameterType="com.tianxing.system.entity.SysApis" resultMap="BaseResultMap">
        <include refid="selectSysApisVo"/>
    </select>

    <!-- 校验接口名是否唯一 -->
    <select id="checkSysApisName" parameterType="String" resultType="int">
        select count(1) from sys_apis where apisName=apisName
    </select>
</mapper>
