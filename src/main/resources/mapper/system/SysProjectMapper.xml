<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tianxing.system.mapper.SysProjectMapper">


    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.tianxing.system.entity.SysProject">
            <result column="id"      property="id"     />
                <result column="project_name"      property="projectName"    />
                <result column="originator"      property="originator"    />
                <result column="modular_num"      property="modularNum"    />
                <result column="api_num"      property="apiNum"    />
                <result column="create_by"      property="createBy"    />
                <result column="create_time"      property="createTime"    />
                <result column="update_by"      property="updateBy"    />
                <result column="update_time"      property="updateTime"    />
                <result column="remark"      property="remark"    />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="selectSysProjectVo">
        select
        id,
        project_name, originator, modular_num, api_num, create_by, create_time, update_by, update_time, remark from sys_proj
    </sql>

    <select id="selectSysProjectList" parameterType="com.tianxing.system.entity.SysProject" resultMap="BaseResultMap">
        <include refid="selectSysProjectVo"/>
    </select>

    <!-- 校验项目名是否唯一 -->
    <select id="checkSysProjectName" parameterType="String" resultType="int">
        select count(1) from sys_proj where projName=projName
    </select>
</mapper>
