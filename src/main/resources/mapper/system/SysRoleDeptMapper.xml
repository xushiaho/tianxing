<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tianxing.system.mapper.SysRoleDeptMapper">


    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.tianxing.system.entity.SysRoleDept">
                <id column="role_id"      property="roleId"        />
                <result column="dept_id"      property="deptId"    />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="selectSysRoleDeptVo">
        select
        role_id, dept_id from sys_role
    </sql>

    <select id="selectSysRoleDeptList" parameterType="com.tianxing.system.entity.SysRoleDept" resultMap="BaseResultMap">
        <include refid="selectSysRoleDeptVo"/>
    </select>

    <!-- 校验角色名是否唯一 -->
    <select id="checkSysRoleDeptName" parameterType="String" resultType="int">
        select count(1) from sys_role where roleName=roleName
    </select>
</mapper>
