<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tianxing.system.mapper.SysDeptCopyMapper">


    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.tianxing.system.entity.SysDeptCopy">
        <id column="dept_id"      property="deptId"        />
        <result column="parent_id"      property="parentId"    />
        <result column="dept_name"      property="deptName"    />
        <result column="order_num"      property="orderNum"    />
        <result column="leader"      property="leader"    />
        <result column="phone"      property="phone"    />
        <result column="email"      property="email"    />
        <result column="status"      property="status"    />
        <result column="del_flag"      property="delFlag"    />
        <result column="create_by"      property="createBy"    />
        <result column="create_time"      property="createTime"    />
        <result column="update_by"      property="updateBy"    />
        <result column="update_time"      property="updateTime"    />
        <result column="remark"      property="remark"    />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="selectSysDeptCopyVo">
        select dept_id, parent_id, dept_name, order_num, leader, phone, email, status, del_flag, create_by, create_time, update_by, update_time, remark from sys_dept_copy
    </sql>

    <!-- 查询部门列表 -->
    <select id="selectSysDeptCopyList" parameterType="com.tianxing.system.entity.SysDeptCopy" resultMap="BaseResultMap">
        <include refid="selectSysDeptCopyVo"/>
    </select>

    <!-- 校验部门名是否唯一 -->
    <select id="checkSysDeptCopyName" parameterType="String" resultType="int">
        select count(1) from sys_dept_copy where dept_name=#{deptName}
    </select>
</mapper>
