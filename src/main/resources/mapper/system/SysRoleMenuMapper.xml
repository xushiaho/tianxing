<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tianxing.system.mapper.SysRoleMenuMapper">


    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.tianxing.system.entity.SysRoleMenu">
                <id column="role_id"      property="roleId"        />
                <result column="menu_id"      property="menuId"    />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="selectSysRoleMenuVo">
        select
        role_id, menu_id from sys_role
    </sql>

    <select id="selectSysRoleMenuList" parameterType="com.tianxing.system.entity.SysRoleMenu" resultMap="BaseResultMap">
        <include refid="selectSysRoleMenuVo"/>
    </select>

    <!-- 校验角色名是否唯一 -->
    <select id="checkSysRoleMenuName" parameterType="String" resultType="int">
        select count(1) from sys_role where roleName=roleName
    </select>
</mapper>
